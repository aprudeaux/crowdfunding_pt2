<div class="welcome">
   <h1 class="greet">Sign up for FREE!</h1>

<div class="container">		
    <div class="category greet">
 			  <h4>Which Best Describes You?</h4>
 			  <form class="form-inline">
    			<div class="checkbox1">
        		<label><input type="checkbox"/> Entrepreneur </label>
    			</div>
    			<div class="checkbox2">
        		<label><input type="checkbox"/> Investor </label>
    			</div>
			  </form>
		</div><!--close category-->
			<br><br>
<div class="row">
  <div class="leftnav col-md-4 col-md-offset-2 ">
 				      <h4>Sign up with Email</h4>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
      <br>
      <div class="form-group has-feedback">
        <%= f.text_field :name, class: 'form-control', autofocus: true, placeholder: 'Full Name' %>
      </div>
      
      <div class="form-group">
        
        <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: 'Email' %>
      </div>

      <div class="form-group">
        
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', autofocus: true, placeholder: 'Password ' %>
      </div>

      <div class="form-group">
        
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', autofocus: true, placeholder: 'Confirm password' %>
      </div>

      <div class="form-group">
        <%= f.submit "Sign up", class:"btn btn-success btn-block btn-lg" %>
      </div>
        <% end %>

        <p><span> Already a member?</span> <%= render "devise/shared/links" %></p>

    
    </div>


    <div class="middle">  
        <span><strong> - OR - </strong></span>
    </div>     	
 		<div class="rightnav col-md-4">		
 					<h4>Sign up with Social Account</h4><br>
 				<div class="social-auth-links text-center">
          			<button type="submit" class="btn btn-block  btn-primary btn-lg"><i class="fa fa-facebook"></i> Sign up using Facebook</button>
          		<br />
          			<button type="submit" class="btn btn-block  btn-danger btn-lg"><i class="fa fa-google-plus"></i> Sign up using Google+</button>
          		<br />
          			<button type="submit" class="btn btn-block  btn-primary btn-lg"><i class="fa fa-linkedin"></i> Sign up using LinkedIN</button>
         </div>
</div>
</div>
</div>
</div><!--close welcome-->

 